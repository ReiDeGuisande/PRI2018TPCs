extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-header.w3-dark-grey
                h1 Register 
            .w3-container
                form.w3-container(id='registerForm')
                    fieldset
                        legend New User 
                        br
                        legend Username
                        input.w3-input.w3-border.w3-light-grey(type='text',id='username' required)
                        legend Name
                        input.w3-input.w3-border.w3-light-grey(type='text',id='name' required)
                        legend Email
                        input.w3-input.w3-border.w3-light-grey(type='email',id='mail' required)
                        legend Password
                        input.w3-input.w3-border.w3-light-grey(type='password',id='password' required)
                        legend Confirm password
                        input.w3-input.w3-border.w3-light-grey(type='password',id='confirm_password' required )
                        br
                        label.w3-label(id='message')
                        br
                        fieldset
                            legend
                                b Type: 
                            table.w3-table-all
                                tr
                                    td
                                        label.w3-text-pale-grey
                                            b Producer
                                        | &nbsp;
                                        | &nbsp;
                                        input.w3-btn.w3-light-grey(class='radioB',type='radio',id='Producer', value='1', name='typeB' required)
                                    td
                                        label.w3-text-pale-grey
                                            b Consumer
                                        | &nbsp;
                                        | &nbsp;
                                        input.w3-btn.w3-light-grey(class='radioB', type='radio',id='Consumer', value='2',name='typeB' required)
                        br
                        button.w3-button.w3-round-large.w3-black(id='submit', class='enableOnInput') Registration
                br
            footer.w3-container.w3-light-grey
                address Generated by myPRIApp