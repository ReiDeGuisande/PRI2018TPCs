extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Arquivo de Música Digital
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Titulo
                    each o in arq.obras
                        tr
                            td= o.titulo
                            td
                                ul
                                    each a in o.titulos 
                                        li
                                            a(href='http://localhost:5000/obra/m' + a.id)= a.titulo
            footer.w3-container.w3-light-blue
                address Gerado por ArqMusicApp by Tiago Sá
                
                                               